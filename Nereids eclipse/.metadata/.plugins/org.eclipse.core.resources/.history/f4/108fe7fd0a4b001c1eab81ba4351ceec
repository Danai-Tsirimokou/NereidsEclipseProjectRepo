package firstScreen;

import java.awt.BorderLayout;
import java.awt.Color;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.WindowConstants;

public class FirstScreenFrame {
	public Color SeaBlue = new Color( 6, 45, 98);
	
	public FirstScreenFrame() {
		JFrame frame = new JFrame("Nereids");
		FirstScreenPanel fspanel = new FirstScreenPanel();
		   frame.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
		    frame.setLayout(new BorderLayout());
		    
		    frame.add(fspanel);
		    frame.getContentPane().add(fspanel, BorderLayout.WEST);
		    frame.setSize(600, 600);
		    frame.setVisible(true);
		    frame.setResizable(true);
		
	
	}


}
